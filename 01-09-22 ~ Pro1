// C program to check a number is even or odd using functions with return value

#include<stdio.h>
int checkevenodd(int);
void main() {
    int n,ans;
    printf("Enter a number:");
    scanf("%d",&n);
    ans=checkevenodd(n);
    if(ans==0)
    printf("even");
    else
    printf("odd");
}
int checkevenodd(int n)
{
    if(n%2==0)
    return(0);
    else
    return(1);
}

Output:
Enter a number:7
odd
